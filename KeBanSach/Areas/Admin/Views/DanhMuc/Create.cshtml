@model DanhMuc

<div class="container mt-5">
    <h1 class="text-center text-uppercase fw-bold mb-4">Tạo danh mục mới</h1>

    <form class="col-lg-6 mx-auto shadow-lg p-4 rounded" method="post" style="background-color: #f8f9fa;">
        <div class="mb-4 text-center">
            <h2 class="text-primary fw-bold">THÊM DANH MỤC</h2>
            <hr />
        </div>
        <div class="mb-4">
            <label asp-for="Name" class="form-label fw-bold">Tên Danh Mục</label>
            <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập tên danh mục" />
            <span asp-validation-for="Name" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-success btn-lg px-4">
                <i class="bi bi-check-circle"></i> Tạo
            </button>
            <a asp-controller="DanhMuc" asp-action="Index" class="btn btn-secondary btn-lg px-4">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
