@model List<DanhMuc>

<div class="container mt-5">
    <h1 class="text-center text-uppercase fw-bold mb-4">Danh sách các danh mục</h1>

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <p class="fs-3 fw-bold">Tổng số danh mục: <span class="text-primary">@Model.Count</span></p>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-controller="DanhMuc" asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-patch-plus-fill"></i> Tạo danh mục mới
            </a>
        </div>
    </div>

    <form method="post">
        <table class="table table-striped table-hover text-center align-middle shadow-lg" style="background-color: aliceblue">
            <thead class="table-dark">
                <tr>
                    <th>Tên Danh Mục</th>
                    <th>Thao Tác</th>
                    <th>
                        <button type="button" id="SelectAll" class="btn-primary btn-danger btn-sm">Chọn hết</button>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)

                {
                    <tr>
                        <td class="fs-5">@obj.Name</td>
                        <td>
                            <a asp-controller="DanhMuc" asp-action="Edit" asp-route-id="@obj.DanhMucId" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-controller="DanhMuc" asp-action="Delete" asp-route-id="@obj.DanhMucId" class="btn btn-danger btn-sm mx-1">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                        <td>
                            <input class="form-check-input checkbox-item" type="checkbox" name="DeletedDanhMucId" value="@obj.DanhMucId" style="transform: scale(1.5);" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-4">
            <div class="col text-end">
                <button type="submit" class="btn btn-dark btn-sm" style="margin-right: 89px">
                    <i class="bi bi-trash2"></i> Xóa Nhiều
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const selectAllButton = document.getElementById("SelectAll");
        const checkboxes = document.querySelectorAll(".checkbox-item");
        let allChecked = false;

        selectAllButton.addEventListener("click", function (event) {
            event.preventDefault(); 

            checkboxes.forEach(checkbox => {
                checkbox.checked = !allChecked; 
            });
            allChecked = !allChecked; 
        });
    });
</script>