@model DanhMuc

<div class="container mt-5">
    <h1 class="text-center text-uppercase fw-bold mb-4">Chỉnh Sửa Danh Mục</h1>

    <form method="post" class="col-lg-6 mx-auto shadow-lg p-4 bg-light rounded">
        <input asp-for="DanhMucId" type="hidden" />

        <div class="mb-4 text-center">
            <h2 class="text-primary fw-semibold">Thông Tin Danh Mục</h2>
            <hr class="w-50 mx-auto text-primary" />
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Tên Danh Mục</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center mt-4 gap-3">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-save-fill"></i> Cập Nhật
            </button>
            <a asp-controller="DanhMuc" asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle-fill"></i> Quay Lại
            </a>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}